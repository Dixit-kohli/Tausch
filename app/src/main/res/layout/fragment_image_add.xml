<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/myImageAddFragment"
    android:background="@color/dialogBoxBackground"
    tools:context="com.scu.tausch.Activities.ImageAddFragment">

    <TextView
        android:id="@+id/top_heading"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Upload Photos"
        />

<LinearLayout
    android:id="@+id/layout_top_three_images"
    android:layout_below="@+id/top_heading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image_one"
        android:layout_width="@dimen/image_upload_w_h"
        android:layout_height="@dimen/image_upload_w_h"
        android:src="@mipmap/item_placeholder"/>

    <ImageView
    android:id="@+id/image_two"
    android:layout_width="@dimen/image_upload_w_h"
    android:layout_height="@dimen/image_upload_w_h"
    android:src="@mipmap/item_placeholder"/>

    <ImageView
    android:id="@+id/image_three"
    android:layout_width="@dimen/image_upload_w_h"
    android:layout_height="@dimen/image_upload_w_h"
    android:src="@mipmap/item_placeholder"/>

</LinearLayout>


    <LinearLayout
        android:id="@+id/layout_bottom_two_images"
        android:layout_below="@+id/layout_top_three_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/image_four"
            android:layout_width="@dimen/image_upload_w_h"
            android:layout_height="@dimen/image_upload_w_h"
            android:src="@mipmap/item_placeholder"/>

        <ImageView
            android:id="@+id/image_five"
            android:layout_width="@dimen/image_upload_w_h"
            android:layout_height="@dimen/image_upload_w_h"
            android:src="@mipmap/item_placeholder"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</RelativeLayout>