<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/myFilterFragment"
    android:background="@color/dialogBoxBackground"
    tools:context="com.scu.tausch.Activities.FilterFragment">


    <TextView
        android:id="@+id/top_heading"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Post a New Listing"
        />

    <EditText
        android:id="@+id/edit_titleListing"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:background="#FFFFFF"
        android:hint="Title for the listing" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:prompt="@string/spinner_title"/>

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="260dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:background="#FFFFFF"
        android:hint="Description" />

    <EditText
        android:id="@+id/edit_price"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:background="#FFFFFF"
        android:hint="$" />

    <Spinner
        android:id="@+id/spinner_city"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:prompt="@string/spinner_title"/>

    <Spinner
        android:id="@+id/spinner_condition"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:prompt="@string/spinner_title"/>

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"/>

</LinearLayout>